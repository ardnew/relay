{

  "go.buildFlags": [
    "-v",
    "-gcflags=github.com/ardnew/relay/...=-N -l"
  ],

  "go.diagnostic.vulncheck": "Imports",

  "go.lintTool": "golangci-lint-v2",
  "go.lintOnSave": "workspace",
  "go.lintFlags": [
    "--config=.golangci.yml"
  ],
  "gopls": {
    "build.buildFlags": [
      "-gcflags=github.com/ardnew/relay/...=-N -l"
    ],
    "formatting.local": "github.com/ardnew/relay",
    "ui.diagnostic.analyses": {
      "fieldalignment": false,
      "nilness": true,
      "shadow": true,
      "staticcheck": true,
      "structtag": false,
      "unreachable": true,
      "unsafemarshal": true,
      "unsafemath": true,
      "unsafeprop": true,
      "unsafeptr": true,
      "unsafeslice": true,
      "unsafetype": true,
      "unusedfunc": true,
      "unusedparams": true,
      "unusedwrite": true,
      "useany": true,
    },
  },

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "[markdown]": {
    "editor.formatOnSave": true
  },
}
